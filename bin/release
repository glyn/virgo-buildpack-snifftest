#!/usr/bin/env ruby

# sync output
$stdout.sync = true

puts "Entered release script"

port = ENV['PORT']
puts "PORT=#{port}"

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  puts pack.release
end

puts "Exiting release script"

